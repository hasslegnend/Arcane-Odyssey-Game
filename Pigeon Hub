local ApplyFlightBtn = Instance.new("TextButton")
ApplyFlightBtn.Parent = GeneralSection
ApplyFlightBtn.Size = UDim2.new(0,80,0,buttonHeight)
ApplyFlightBtn.Position = UDim2.new(0, 220, 0, currentY)
